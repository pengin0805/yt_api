<div class="search_form">
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :keyword, class: "form", placeholder: "キーワードを入力してください" %>
    <%= f.text_field :row_count, class: "form", placeholder: "何件検索しますか" %>
    <%= f.text_field :limit_date_count, class: "form", placeholder: "何日前までさかのぼりますが" %>
    <%= f.text_field :limit_play_per_subscriber_rate, class: "form", placeholder: "登録者数何人以上にしますか" %>
    <%= f.submit class: "form" %>
  <% end %>
  <%= form_tag import_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "インポート" %>
  <% end %>
</div>